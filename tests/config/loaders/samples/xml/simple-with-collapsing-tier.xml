<?xml version="1.0" encoding="UTF-8"?>
<Actions>

    <Action name="RunAnsible">
        <description>Run ansible</description>
        <type>shell</type>
        <command>playbooks/Dummy.yml</command>
    </Action>

    <Action name="RunGroovy">
        <dependency>RunAnsible</dependency>
        <description>Run groovy</description>
        <type>shell</type>
        <command>groovy/Dummy.groovy</command>
    </Action>

    <Action name="RunShell">
        <dependency>RunAnsible</dependency>
        <dependency>RunGroovy</dependency>
        <description>Run shell</description>
        <type>shell</type>
        <command>echo foo</command>
    </Action>

</Actions>
